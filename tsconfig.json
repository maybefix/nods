{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "types": ["svelte", "node"],
    "plugins": [{ "name": "@sveltejs/typescript-plugin" }],

    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "**/*.svelte"]
}
